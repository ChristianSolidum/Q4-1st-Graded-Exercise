<!DOCTYPE html>
<html>

<head>
  <!-- Specifies character encoding for better text representation, especially special characters -->
  <meta charset="utf-8">
  <!-- Ensures proper rendering on different devices using responsive design -->
  <meta name="viewport" content="width=device-width", initial-scale=1>
  <!-- Author information placeholder (currently empty) -->
  <meta name="author" content="">
  <!-- Description for search engines (empty) -->
  <meta name="description" content=" ">
  <!-- Keywords for search engines (empty) -->
  <meta name="keywords" content="">
  <!-- Title displayed on the browser tab -->
  <title>SOLIDUM - CS 3 </title>
  
  <!-- Linking to W3.CSS for predefined responsive design styles -->
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  
  <!-- Linking to an external local CSS file for custom styles -->
  <link href="style.css" rel="stylesheet" type="text/css" />

  <!-- Favicon for the website (currently empty) -->
  <link rel="icon" type="image/x-icon" href="">
</head>

<!-- Applying W3.CSS container class for layout management and responsiveness -->
<body class="w3-container w3-auto">

  <!-- Navigation bar using W3.CSS for a clean and responsive menu -->
  <div class="w3-bar w3-black">
    <!-- Home button navigates to the root URL -->
    <a href="/" class="w3-bar-item w3-button w3-mobile">Home</a>
    
    <!-- Happy button triggers form submission using JavaScript -->
    <a href="#" class="w3-bar-item w3-button w3-mobile" onclick="document.getElementById('input_form').submit();">Happy</a>
  </div>

  <!-- Header section with student information -->
  <header class="w3-container" id="header"> 
    <h1>Christian Solidum - 9-Mg - March 2025</h1>
    <h2> Birthday </h2>
  </header>

  <!-- Input Section to collect user data -->
  <section class="w3-container" id="input"> 
    <h2>Input</h2>
    
    <!-- Form for data submission using POST method to "/happy" URL -->
    <form id="input_form" action="/happy" method="POST"
        onsubmit="return confirm('Sure to Submit')"
        onreset="return confirm('Sure to Reset')"> <!-- Confirms reset and submission -->
        
      <!-- First Column: User nickname and gender selection using radio buttons -->
      <div class="w3-row">
        <div class="w3-third w3-panel w3-card w3-margin">
          <label for="name">Your nickname:</label><br>
          <!-- Input field for nickname using W3.CSS styling -->
          <input class="w3-input" type="text" id="name" name="myName"><br>

          <!-- Radio buttons for gender selection with W3.CSS styling -->
          <label for="gender">Gender: </label><br>
          <input class="w3-radio" type="radio" id="male" name="gender" value="Male">
          <label for="male">Male</label> <br>
          <input class="w3-radio w3-margin-bottom" type="radio" id="female" name="gender" value="Female">
          <label for="female">Female</label>
        </div>
      
      <!-- Second Column: Number of guests selection -->
      <div class="w3-panel w3-third w3-card w3-margin w3-padding">
        <label for="number"> Number of close family and friends: </label><br>
        <!-- Dropdown using JavaScript to generate options from 1 to 16 -->
        <select class="w3-select w3-border" id="number" name="number" onchange="generateGuestFields()">
          <option value="">--Please choose a number--</option>
          <script>
            // Dynamically generates options for the dropdown from 1 to 16
            for(let i=1; i<=16; i++ ){
              document.write(`<option value="${i}"> ${i} </option>`);
            }
          </script>
        </select><br>

        <!-- Container to display dynamically generated guest input fields -->
        <div id="guests">  </div>
        
        <!-- Form submit and reset buttons using W3.CSS for styling -->
        <button type="submit" class="w3-button w3-black w3-margin">Submit</button>
        <input class="w3-button w3-black w3-margin" type="reset" value="Reset">
      </div>
      </div>
    </form> 
  </section>

  <!-- Footer section displaying copyright information -->
  <footer class="w3-container">
    <p> &copy; 2024 CS3 Teachers </p>
  </footer>

  <!-- JavaScript to generate input fields for guests -->
  <script>
    function generateGuestFields(){
      // Get the selected number of guests
      const num = document.getElementById('number').value;
      const container = document.getElementById('guests');
      container.innerHTML = 'Enter the name(s) of your invitees: <br>';

      for (let i=0; i < num; i++){
        // Create a text input for each guest's name
        const input = document.createElement('input');
        input.type = 'text';
        input.name = 'name' + (i+1);
        input.className = 'w3-input w3-half';
        container.appendChild(input);

        // Create a checkbox for each guest to indicate if they are going
        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.id = 'checkbox' + (i+1);
        checkbox.name = 'checkbox' + (i+1);
        checkbox.className = 'w3-check w3-margin-left w3-margin-right w3-margin-bottom';
        container.appendChild(checkbox);

        // Add a label for the checkbox
        const label = document.createElement('label');
        label.htmlFor = checkbox.id;
        label.textContent = "Going?";
        container.appendChild(label);

        // Add a line break for separation
        container.appendChild(document.createElement('br')); 
      }
    }
  </script>

</body>
</html>
